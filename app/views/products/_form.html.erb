<%= form_with(model: product, local: true, url:{action: "create"}, class: 'P-form-new-product') do |f| %>

  <div class="P-wrap-new-product container">
    <div class="P-label-wrap-new-product">New Product</div>
    <div class="row">
      <!-- Name -->
      <div class="P-content-new-product col-md-12 mt-2">
        <%= f.label :name, class:"P-label-new-product" %> <br>
        <%= f.text_field :name, id: :product_name, class: 'P-input-new-product'%><br>
        <div class="P-alert"><span id="P-alert-name">demo</span></div>
      </div>
    </div>

    <div class="row">
      <!-- Price -->
      <div class="P-content-new-product col-md-6 mt-2 P-price-new-product">
        <%= f.label :price, class:"P-label-new-product" %> <br>
        <%= f.number_field :price, id: :product_price, class: 'P-input-new-product P-input-price-new-product' %><br>
        <div class="P-alert"><span id="P-alert-price">demo</span></div>
      </div>

      <!-- Type -->
      <div class="P-content-new-product col-md-6 mt-2">
        <%= f.label :category_name, class:"P-label-new-product" %> <br>

        <div class="P-radio-new-product" id="P-type-new-product">
          <% Product::CATEGORY.each do |type| %>
            <div class="custom-control custom-radio P-wrap-radio-new-product">
              <%= f.radio_button :category_name, type, class:"custom-control-input P-category-new-product", id: type%>
              <%= f.label type, class:"custom-control-label P-radio-label-new-product", for: type%>
            </div>
          <% end %>
          <div class="P-alert"><span id="P-alert-category">demo</span></div>
        </div>
      </div>
    </div>

    <div class="row">
      <!-- Description -->
      <div class="P-content-new-product col-md-6 mt-2" style="height: 29vh;">
        <%= f.label :description, class:"P-label-new-product" %> <br>
        <%= f.text_area :description, id: :product_description, class: "P-input-new-product", style: "width: 100%; height: 75%; padding:10px 20px 10% 15px;" %>
        <!-- <textarea class="P-input-new-product" id="P-description-new-product" style="width: 100%; height: 75%; padding:10px 20px 10% 15px;"></textarea> -->
        <br>
        <div class="P-alert">
          <span id="P-alert-des">demo</span>
        </div>
      </div>

      <!-- Advantage -->
      <div class="P-content-new-product col-md-6 mt-2">
        <%= f.label :advantage, class:"P-label-new-product" %> <br>
        <%= f.text_field :advantage_1, class: 'P-input-new-product P-advantage-new-product', id: 'advantage1'%> <br>
        <div class="P-alert">
          <span id="P-alert-advan1">demo</span>
        </div>

        <%= f.text_field :advantage_2, class: 'P-input-new-product P-advantage-new-product', id: 'advantage2' %> <br>
        <div class="P-alert">
          <span id="P-alert-advan2">demo</span>
        </div>
        
        <%= f.text_field :advantage_3, class: 'P-input-new-product P-advantage-new-product', id: 'advantage3'%> <br>
        <div class="P-alert">
          <span id="P-alert-advan3">demo</span>
        </div>
      </div>
    </div>

    <div class="row">
      <!-- Collection -->
      <div class="P-content-new-product col-md-6 mt-2">
        <%= f.label :collection, class:"P-label-new-product" %> <br>
        <%= f.text_field :collection, id: :product_collection, class: 'P-input-new-product'%>
        <br>
        <div class="P-alert">
          <span id="P-alert-collect">demo</span>
        </div>
      </div>

      <!-- Quanlity -->
      <div class="P-content-new-product col-md-6 mt-2">
        <%= f.label :amount, class:"P-label-new-product" %> <br>
        <%= f.number_field :amount, id: :product_amount, class: 'P-input-new-product'%>
        <br>
        <div class="P-alert">
          <span id="P-alert-quanlity">demo</span>
        </div>
      </div>      
    </div>

    <div class="row">
      <!-- Metal -->
      <div class="P-content-new-product col-md-6 mt-2">
        <%= f.label :metal, class:"P-label-new-product" %> <br>
        <%= f.collection_select :metal_id, @metals, :id, :name, 
          {prompt: 'Choose Metal'},{class:"P-select-new-product", id: :product_metal} %>
        <div class="P-alert">
          <span id="P-alert-metal">demo</span>
        </div>  
      </div>

      <!-- Gemstone -->
      <div class="P-content-new-product col-md-6 mt-2">
        <%= f.label :gem_stone, class:"P-label-new-product" %> <br>
        <%= f.collection_select :gem_stone_id, @gem_stones, :id, :name, 
          {prompt: 'Choose Gem Stones'},{class:"P-select-new-product", id: :product_gem_stone} %>
        <div class="P-alert">
          <span id="P-alert-gemstone">demo</span>
        </div>
      </div>
    </div>


