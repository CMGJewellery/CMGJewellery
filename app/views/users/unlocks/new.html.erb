<div class="B-email-reply-form">
  <div class="B-email-form-container B-white-font">
    <h3>Resend unlock instructions</h3>

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'B-text-input' %>
      </div>

      <div class="actions">
        <%= f.submit "Resend unlock instructions", class:'B-form-button' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
