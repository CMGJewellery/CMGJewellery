<%# Using B_login and B_registration %>
<!DOCTYPE html>
<html class="B-body-form">
  <head>
    <title>CMGJewellery</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div id="B-notice">
    <% if notice %>
      <p class="B_notice_box"><%=notice%></p>            
    <% end %>
    <% if alert %>
      <p class="B_notice_box"><%= alert %></p> 
    <% end %>
  </div>
  <body class="B-body-form">
    <div class="B-grid-container B-login-container">
      <div class="B-registration-form">
        <div class="B-form-container">
          <center><h3>Log In</h3></center>
          <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: 'B-login-form-fields B-validator'} do |f| %>
          <%#= devise_error_messages! %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.text_field :email, autofocus: true, autocomplete: "email", class:'B-text-input' %>
              <p class="B-form-message-container" id="user_email_messenger">*</p>
            </div>
            <div class="field", style="position:relative">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", class:'B-text-input' %>
              <span class="B-eye-container"><i class="fa fa-eye" id="toggle" onclick="togglePasswordVisibility()"></i></span>
              <p class="B-form-message-container" id="user_password_messenger">*</p>
            </div>    
            <% if devise_mapping.rememberable? -%>
              <div class="field B-styled-input-diamond">
                <div class="B-styled-input-single">
                  <%= f.check_box :remember_me, id:'B-checkbox-remember-me' %>
                  <%= f.label :remember_me, for:'B-checkbox-remember-me' %>
                </div>
              </div>
            <% end -%>
            <div>
              <div class="B-grid-container B-form-button-container">
                <%= link_to 'Go Back', root_path, class:"B-form-button B-back-button"%>
                <div class="actions">
                  <%= f.submit "Log in", class:"B-form-button" %>
                </div>      
              </div>  
              <%= link_to "Don't have an account yet?", new_user_registration_path, class:"B-form-bottom-links"  %>
            </div>
          <% end %>
          <div class="B-form-bottom-links">
            <%= render "users/shared/links"%>
          </div>
        </div>
      </div>  
      <div class="carousel slide B-disappear-mobile-responsive B-carousel-container" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active">
            <%= image_tag 'carousel-1', class:'d-block w-100 img-fluid', data: {holder:'true'} %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'carousel-2', class:'d-block w-100 img-fluid', data: {holder:'true'} %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'carousel-3', class:'d-block w-100 img-fluid', data: {holder:'true'} %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'carousel-4', class:'d-block w-100 img-fluid', data: {holder:'true'} %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
