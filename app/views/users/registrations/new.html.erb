<%# Using B_registration %>
<!DOCTYPE html>
<html class="B-body-form">
  <head>
    <title>CMGJewellery</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>    
  </head>
  <body class="B-body-form">
    <div class="B-grid-container B-registration-container">
      <div id="carouselExampleSlidesOnly" class="carousel slide B-disappear-mobile-responsive B-carousel-container" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active">
            <%= image_tag 'carousel-1', class:'d-block w-100 img-fluid', data: {holder:'true'} %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'carousel-2', class:'d-block w-100 img-fluid', data: {holder:'true'} %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'carousel-3', class:'d-block w-100 img-fluid', data: {holder:'true'} %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'carousel-4', class:'d-block w-100 img-fluid', data: {holder:'true'} %>
          </div>
        </div>
      </div>
      <div class="B-registration-form">
        <div class="B-form-container">
          <center><h3>Sign up</h3></center>
          <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'B-registration-form-fields B-validator'} do |f| %>
          <%#= devise_error_messages! %>
            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'B-text-input'%>
              <p class="B-form-message-container" id="user_name_messenger">*</p>
            </div>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.text_field :email, autocomplete: "email", class:'B-text-input' %>
              <p class="B-form-message-container" id="user_email_messenger">*</p>
            </div>
            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <span class="B-eye-container"><i class="fa fa-eye" id="toggle" onclick="togglePasswordVisibility()"></i></span>
              <%= f.password_field :password, autocomplete: "off", class:'B-text-input' %>     
              <p class="B-form-message-container" id="user_password_messenger">*</p>
            </div>
            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class:'B-text-input' %>
              <p class="B-form-message-container" id="user_password_confirmation_messenger">*</p>
            </div>
            <div>
              <div class="B-grid-container B-form-button-container">
                <%= link_to root_path, class:"B-form-button B-back-button" do %>
                  <span>Go Back</span>
                <% end %>
                <div class="actions">
                  <%= f.submit "Sign Up", class:"B-form-button" %>
                </div>   
                <%# id:"submit", type:'submit' %>
              </div>     
              <%= link_to 'Already have an account?', new_user_session_path %>     
            </div>
          <% end %>
          <%= render "users/shared/links", class:"B-form-bottom-links" %>
        </div>
      </div>  
    </div>
  </body>
</html>