<p id="notice"><%= notice %></p>

<h1>Metals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Metal type</th>
      <th>Metal accents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metals.each do |metal| %>
      <tr>
        <td><%= metal.name %></td>
        <td><%= metal.metal_type %></td>
        <td><%= metal.metal_accents %></td>
        <td><%= link_to 'Show', metal %></td>
        <td><%= link_to 'Edit', edit_metal_path(metal) %></td>
        <td><%= link_to 'Destroy', metal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

