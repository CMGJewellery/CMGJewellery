<!DOCTYPE html>
<html>
  <head>
    <title>CMGJewellery</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- brand -->
    <div class="container-fluid pb-3 pt-1">
      <div class="row">
        <div class="col-md-3 text-center" id="login-p">
        <i class="fa fa-user"></i>
        <%= link_to 'Sign In', root_path, class:"mt-3 login-p"%> 
        <span> / </span> 
        <%= link_to 'Register', root_path, class:"mt-3 login-p" %>
        </div>

        <div class="col-md-6">
          <a href="index.html" id="brand-p">
            <p class="h1 text-center mt-1">CMG Jewellery</p>
          </a>
        </div>

        <div class="col-md-3">
          <div class="input-group w-100 text-center" id="home-search-p">
            <input class="form-control form-control-dark input-home-search-p" type="text" placeholder="I'm looking for ..." aria-label="Search">
              <div class="input-group-append mr-2">
                <button class="btn btn-outline-dark input-home-search-p" type="submit">
                  <i class="fa fa-search"></i>
                </button>
              </div>
              <i class="fa fa-shopping-cart" style="font-size: 30px;"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- navigation bar -->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top py-0">
      <button class="navbar-toggler" data-toggle="collapse" data-target="#collape-navbar-p">
        <span class="navbar-toggler-icon "></span>
      </button>

      <div class="collapse navbar-collapse justify-content-center" id="collape-navbar-p">
        <ul class="navbar-nav text-center">
          <li class="nav-item mx-3">
            <a href="# " class="nav-link py-0">NEW IN</a>
          </li>

          <li class="nav-item mx-3">
            <a href="# " class="nav-link py-0">JEWELLRY</a>
          </li>

          <li class="nav-item mx-3">
            <a href="# " class="nav-link py-0">GIFTS</a>
          </li>

          <li class="nav-item mx-3">
            <a href="# " class="nav-link py-0">EXPLORE</a>
          </li>

          <li class="nav-item mx-3">
            <a href="# " class="nav-link py-0">PERSONALISE</a>
          </li>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
